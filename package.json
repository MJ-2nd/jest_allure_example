  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@jest/globals": "^29.7.0",
    "allure-commandline": "^2.29.0",
    "allure-js-commons": "^2.15.1",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-allure2-reporter": "^2.2.6"
  }
}
